<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFAFA2"
        android:padding="@dimen/activity_vertical_margin"
        tools:context=".CatsListViewActivity">

        <TextView
            android:id="@+id/border_white"
            android:layout_width="298dp"
            android:layout_height="542dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/rounded_border_white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="182dp"
            android:layout_height="206dp"
            android:layout_marginTop="172dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>


        <ImageView
            android:id="@+id/gatinho_icon"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="@id/border_white"
            app:layout_constraintLeft_toLeftOf="@id/border_white"
            app:layout_constraintRight_toRightOf="@id/border_white"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/name_logo"
            android:layout_width="35dp"
            android:layout_height="19dp"
            android:layout_marginTop="4dp"

            android:text="@string/name_logo"


            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/icon_logo"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/gatinho_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D74949"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/border_white"
            app:layout_constraintLeft_toLeftOf="@id/border_white"
            app:layout_constraintRight_toRightOf="@id/border_white"
            android:layout_marginTop="20dp"
             />

        <TextView
            android:id="@+id/cat_description"
            android:layout_height="wrap_content"
            android:textColor="#D74949"
            android:textSize="10sp"
            android:layout_width="250dp"
            app:layout_constraintTop_toBottomOf="@id/gatinho_icon"
            app:layout_constraintLeft_toLeftOf="@id/border_white"
            app:layout_constraintRight_toRightOf="@id/border_white"
            />

        <TextView
            android:id="@+id/life_expectations"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="#D74949"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/cat_description"
            app:layout_constraintRight_toRightOf="@id/border_white"
            app:layout_constraintLeft_toLeftOf="@id/border_white"

            />

        <TextView
            android:id="@+id/adaptability"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="@id/border_white"
            app:layout_constraintLeft_toLeftOf="@id/border_white"
            android:textColor="#D74949"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/life_expectations"
             />

        <TextView
            android:id="@+id/affection_level"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:textColor="#D74949"
            android:textSize="10sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/adaptability"
            app:layout_constraintRight_toRightOf="@id/border_white"
            app:layout_constraintLeft_toLeftOf="@id/border_white" />

        <TextView
            android:id="@+id/energy_level"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:textColor="#D74949"
            app:layout_constraintTop_toBottomOf="@id/affection_level"
            android:textSize="10sp"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="@id/border_white"
            app:layout_constraintLeft_toLeftOf="@id/border_white"
             />

        <TextView
            android:id="@+id/health_problems"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/border_white"
            app:layout_constraintLeft_toLeftOf="@id/border_white"
            android:textColor="#D74949"
            android:textSize="10sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/energy_level"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>



